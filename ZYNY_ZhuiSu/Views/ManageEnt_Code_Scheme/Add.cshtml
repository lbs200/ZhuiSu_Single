
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutPageManage.cshtml";
}
<div class="row-fluid">

    <div class="span12">

        <!-- BEGIN SAMPLE FORM PORTLET-->

        <div class="portlet box grey tabbable">

            <div class="portlet-title">

                <div class="caption">

                    <i class="icon-reorder"></i>

                    <span class="hidden-480">企业内部编码方案新增</span>

                </div>

            </div>

            <div class="portlet-body form">

                <div class="tabbable portlet-tabs">
                    <ul class="nav nav-tabs">

                        <li class="active"><a href="#portlet_tab3" data-toggle="tab">企业内部编码方案新增</a></li>

                    </ul>

                    <div class="tab-content">

                        <div class="tab-pane active" id="portlet_tab1">

                            <!-- BEGIN FORM-->
                            @{
                                if (ViewBag.error == 1)
                                {
                                    <div class="alert alert-error show">

                                        <button class="close" data-dismiss="alert"></button>

                                        <span>@ViewBag.errorMsg</span>

                                    </div>
                                }
                            }
                            <form action="/ManageEnt_Code_Scheme/Add" id="form1" class="form-horizontal" method="post">

                                <div class="control-group">

                                    <label class="control-label">编码前缀</label>

                                    <div class="controls">
                                        <input type="hidden" value="" name="Scheme_ID" id="Scheme_ID" />
                                        <input type="hidden" value="@ViewBag.Org_ID" name="Org_ID" id="Org_ID" />
                                        <input type="hidden" value="_" name="Separator" id="Separator" />
                                        <input type="hidden" value="-" name="P_S_separator" id="P_S_separator" />
                                        <input type="text" class="m-wrap small" value="" maxlength="50" name="Code_Before" id="Code_Before" />

                                        <span class="help-inline"></span>

                                    </div>

                                </div>
                                <div class="control-group">

                                    <label class="control-label">是否添加日期段</label>

                                    <div class="controls">

                                        <label class="radio">

                                            <input type="radio" name="Date_Required" value="true" checked />

                                            是

                                        </label>

                                        <label class="radio">

                                            <input type="radio" name="Date_Required" value="false" />

                                            否

                                        </label>
                                        <span class="help-inline">如：SG_20140909_1</span>
                                    </div>

                                </div>
                                <div class="form-actions">

                                    <button type="submit" class="btn blue" onclick="return CheckClick();"><i class="icon-ok"></i> 确定</button>

                                    <button type="button" class="btn" onclick="history.go(-1);">取消</button>

                                </div>

                            </form>

                            <!-- END FORM-->

                        </div>

                    </div>

                </div>

            </div>

        </div>

        <!-- END SAMPLE FORM PORTLET-->

    </div>

</div>
<script type="text/javascript">
    function CheckClick() {
        if (document.getElementById("Code_Before").value == "") {
            alert("请输入编码前缀！");
            return false;
        }
        return true;
    }
</script>


