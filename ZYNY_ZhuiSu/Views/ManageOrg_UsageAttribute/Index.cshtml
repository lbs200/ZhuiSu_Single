@model List<LinqModel.Org_UsageAttribute>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageManage.cshtml";
}

<div class="row-fluid">

    <div class="span12">
        <div class="input-append">
            <a href="/ManageOrg_UsageInfo/Index" class="btn">返回</a>
        </div>
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box grey">

            <div class="portlet-title">

                <div class="caption"><i class="icon-globe"></i>【@ViewBag.InfoName】属性管理</div>

                <div class="actions">

                    <a href="/ManageOrg_UsageAttribute/Add?infoID=@ViewBag.InfoID" class="btn blue"><i class="icon-pencil"></i> 新增【@ViewBag.InfoName】属性</a>

                </div>

            </div>

            <div class="portlet-body">

                <table class="table  table-bordered table-hover table-full-width" id="sample_1">

                    <thead>

                        <tr>
                            <th>名称</th>
                            <th>信息</th>
                            <th class="hidden-480">操作</th>
                        </tr>

                    </thead>

                    <tbody>

                        @{
                            int count = 0;
                            foreach (var m in Model)
                            {
                                count++;
                                string classname = "fafafb";
                                if (count % 2 == 0)
                                { classname = "ecf3fa"; }
                                <tr style="background-color: #@classname">
                                    <td>@m.AttributeName</td>
                                    <td>@m.AttributeValue</td>
                                    <td class="hidden-480"><a href="/ManageOrg_UsageAttribute/Update?id=@m.ID&infoID=@ViewBag.InfoID">修改</a>&nbsp;&nbsp;|&nbsp;&nbsp;<a href="javascript:if(confirm('确定要删除么？')){window.location.href ='/ManageOrg_UsageAttribute/Del?id=@m.ID&infoID=@ViewBag.InfoID';} ">删除</a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

            </div>

        </div>

        <!-- END EXAMPLE TABLE PORTLET-->
    </div>

</div>


