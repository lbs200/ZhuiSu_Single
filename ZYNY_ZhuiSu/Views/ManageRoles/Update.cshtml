@model LinqModel.Roles
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_LayoutPageManage.cshtml";
}


 
<div class="row-fluid">
    <div class="span12">
        <!-- BEGIN SAMPLE FORM PORTLET-->

        <div class="portlet box grey tabbable">
            <div class="portlet-title">

                <div class="caption">

                    <i class="icon-reorder"></i>

                    <span class="hidden-480">编辑角色</span>

                </div>

            </div>
            <div class="portlet-body form">

                <div class="tabbable portlet-tabs">

                    <ul class="nav nav-tabs">

                        <li class="active"><a href="#portlet_tab1" data-toggle="tab">角色</a></li>

                    </ul>

                    <div class="tab-content">

                        <div class="tab-pane active" id="portlet_tab1">
                            <!-- BEGIN FORM-->
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <form action="#" class="form-horizontal">
                                    <h4>角色</h4>
                                    <hr />
                                    @Html.ValidationSummary(true)
                                    @Html.HiddenFor(model => model.RoleId)
                                    <div class="control-group">

                                        @Html.LabelFor(model => model.RoleName, "角色名称：", htmlAttributes: new { @class = "control-label col-md-2" })


                                        <div class="controls">


                                            @Html.EditorFor(model => model.RoleName)
                                            @Html.ValidationMessageFor(model => model.RoleName)


                                            <span class="help-inline"></span>

                                        </div>

                                    </div>
                                    <div class="control-group">

                                        @Html.LabelFor(model => model.Description, "角色描述：", htmlAttributes: new { @class = "control-label col-md-2" })


                                        <div class="controls">


                                            @Html.EditorFor(model => model.Description)
                                            @Html.ValidationMessageFor(model => model.Description)


                                            <span class="help-inline"></span>

                                        </div>

                                    </div>
                                    <div class="control-group">

                                        @Html.LabelFor(model => model.Jibie, "级别：", htmlAttributes: new { @class = "control-label col-md-2" })


                                        <div class="controls">



                                            <label class="radio ">
                                                <input id="type1" name="Jibie" type="radio" value="系统级" />系统级

                                            </label>
                                            <label class="radio ">
                                                <input id="type2" name="Jibie" type="radio" value="企业级" />企业级

                                            </label>
                                            <label class="radio ">
                                                <input id="type3" name="Jibie" type="radio" value="政府级" />政府级

                                            </label>
                                            <label class="radio ">
                                                <input id="type4" name="Jibie" type="radio" value="实施级" />实施级

                                            </label><span id="typetishi" class="alert-error"></span>
                                            @Html.ValidationMessageFor(model => model.Jibie)


                                            <span class="help-inline"></span>

                                        </div>

                                    </div>
                                    


                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="保存" onclick="return CheckClick();" class="btn btn-default" />
                                        </div>
                                    </div>
                                </form>
                            }
                            <!-- END FORM-->
                        </div>

                    </div>

                </div>

            </div>

        </div>

        <!-- END SAMPLE FORM PORTLET-->


    </div>
</div>
<div>
    @Html.ActionLink("返回列表", "Index")
</div>
<script type="text/javascript">
    function CheckClick() {
        if (document.getElementById("RoleName").value == "") {
            alert("请输入角色名称！");
            return false;
        }

        return true;
    }
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}