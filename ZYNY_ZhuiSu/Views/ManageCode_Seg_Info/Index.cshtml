@model List<LinqModel.Code_Seg_Info>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageManage.cshtml";
}

<div class="row-fluid">

    <div class="span12">

        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="input-append">

            <a href="/ManageCode_Scheme/Index" class="btn green">返回</a>

        </div>
        <div class="portlet box grey">

            <div class="portlet-title">

                <div class="caption"><i class="icon-globe"></i>编码段位信息管理</div>

                <div class="actions">
                    <a href="/ManageCode_Seg_Info/Add?Scheme_ID=@ViewBag.Scheme_ID" class="btn blue"><i class="icon-pencil"></i> 新增</a>

                </div>

            </div>

            <div class="portlet-body">

                <table class="table  table-bordered table-hover table-full-width" id="sample_1">

                    <thead>

                        <tr>
                            <th width="10"></th>
                            <th>段位序号</th>

                            <th>意义</th>
                            <th class="hidden-480">操作</th>
                        </tr>

                    </thead>

                    <tbody>

                        @{
                            int count = 0;
                            foreach (var m in Model)
                            {
                                count++;
                                string classname = "fafafb";
                                if (count % 2 == 0)
                                { classname = "ecf3fa"; }
                                <tr onclick="RowClick(@m.ID)" id="@m.ID" style="background-color: #@classname">
                                    <td id="ext_@m.ID">+</td>
                                    <td>@m.Seg_No</td>
                                    <td>@m.Meaning</td>
                                    <td class="hidden-480"><a href="/ManageCode_Seg_Info/Update?id=@m.ID">修改</a>&nbsp;&nbsp;|&nbsp;&nbsp;<a href="/ManageCode_Seg_Info/Del?Scheme_ID=@ViewBag.Scheme_ID&id=@m.ID">删除</a></td>
                                </tr>
                                <tr style="display:none; " id="detail_@m.ID">
                                    <td colspan="10">
                                        <div style="margin-left:25px;">
                                            <span><a href="/ManageCode_Seg_Info/Update?id=@m.ID">修改</a>&nbsp;&nbsp;|&nbsp;&nbsp;<a href="/ManageCode_Seg_Info/Del?Scheme_ID=@ViewBag.Scheme_ID&id=@m.ID">删除</a></span>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>

        <!-- END EXAMPLE TABLE PORTLET-->
    </div>

</div>
<script type="text/javascript">
    function RowClick(obj) {
        var m = document.getElementById("detail_" + obj);

        if (m.style.display == "none") {
            document.getElementById("ext_" + obj).innerHTML = "-";
            m.style.display = "";
        }
        else {
            document.getElementById("ext_" + obj).innerHTML = "+";
            m.style.display = "none";
        }
    }
</script>
