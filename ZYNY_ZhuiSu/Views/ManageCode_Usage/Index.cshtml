@model List<LinqModel.Code_Usage>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageManage.cshtml";
}
<div class="row-fluid">

    <div class="span12">

        <!-- BEGIN EXAMPLE TABLE PORTLET-->

        <div class="portlet box grey">

            <div class="portlet-title">

                <div class="caption"><i class="icon-globe"></i>编码用途管理</div>

                <div class="actions">
                    <a href="/ManageCode_Usage/Add" class="btn blue"><i class="icon-pencil"></i> 新增</a>

                </div>

            </div>

            <div class="portlet-body">

                <table class="table  table-bordered table-hover table-full-width" id="sample_1">

                    <thead>

                        <tr>
                            <th>用途编码</th>
                            <th>用途描述</th>
                        </tr>

                    </thead>

                    <tbody>

                        @{
                            int count = 0;
                            foreach (var m in Model)
                            {
                                count++;
                                string classname = "fafafb";
                                if (count % 2 == 0)
                                { classname = "ecf3fa"; }
                                <tr id="@m.Usage_ID" style="background-color: #@classname">
                                    <td>@m.Usage_Code</td>
                                    <td>@m.Usage_Description</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>

        <!-- END EXAMPLE TABLE PORTLET-->
    </div>

</div>

