    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutPageManage.cshtml";
}
<script src="../../Scripts/swfobject.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.uploadify.v2.1.4.js" type="text/javascript"></script>
