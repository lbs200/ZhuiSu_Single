@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutPageManage.cshtml";
}
<script language="javascript" src="../../Scripts/uploadPreview.js"></script>
<script src="../../ckeditor/ckeditor.js" type="text/javascript"></script>
<script src="../../ckfinder/ckfinder.js" type="text/javascript"></script>
<div class="row-fluid">

    <div class="span12">

        <!-- BEGIN SAMPLE FORM PORTLET-->

        <div class="portlet box grey tabbable">

            <div class="portlet-title">

                <div class="caption">

                    <i class="icon-reorder"></i>

                    <span class="hidden-480">企业用途码新增</span>

                </div>

            </div>

            <div class="portlet-body form">

                <div class="tabbable portlet-tabs">
                    <ul class="nav nav-tabs">

                        <li class="active"><a href="#portlet_tab3" data-toggle="tab">企业用途码新增</a></li>

                    </ul>

                    <div class="tab-content">

                        <div class="tab-pane active" id="portlet_tab1">

                            <!-- BEGIN FORM-->
                            @{
                                if (ViewBag.error == 1)
                                {
                                    <div class="alert alert-error show">

                                        <button class="close" data-dismiss="alert"></button>

                                        <span>@ViewBag.errorMsg</span>

                                    </div>
                                }
                            }
                            <form action="/ManageOrg_UsageInfo/Add" id="form1" class="form-horizontal" method="post">
                                <div class="control-group">

                                    <label class="control-label">类型：</label>

                                    <div class="controls">
                                        <select id="Org_UsageType_ID" name="Org_UsageType_ID" style="width:100px;">
                                            @{
                                                try
                                                {
                                                    foreach (var m in ViewBag.Org_UsageType as PagedList.IPagedList<LinqModel.Org_UsageType>)
                                                    {
                                                        if (m.ID == ViewBag.Org_UsageTypeCurrent)
                                                        {
                                                            <option value="@m.ID" selected>@m.TypeName</option>
                                                        }
                                                        else
                                                        {
                                                            <option value="@m.ID">@m.TypeName</option>
                                                        }
                                                    }
                                                }
                                                catch { }
                                            }
                                        </select>
                                        <a href="/ManageOrg_UsageType/Add">新增类型</a>
                                    </div>

                                </div>
                                <div class="control-group">

                                    <label class="control-label">名称：</label>

                                    <div class="controls">
                                        <input type="text" class="m-wrap small" value="" maxlength="50" name="Name" id="Name" />

                                        <span class="help-inline"></span>

                                    </div>

                                </div>
                                <div class="control-group">

                                    <label class="control-label">详情描述：</label>

                                    <div class="controls">
                                        <textarea id="Memo" name="Memo"></textarea>
                                        <script type="text/javascript">
                                            var editor = CKEDITOR.replace('Memo');
                                            CKFinder.SetupCKEditor(editor, '/ckfinder/');
                                            //window.onload = function () {
                                            //    var editor = CKEDITOR.replace('Intro');
                                            //    CKFinder.SetupCKEditor(editor, '/ckfinder/');

                                            //};
                                        </script>

                                        <span class="help-inline"></span>

                                    </div>

                                </div>
                                <div class="form-actions">

                                    <button type="submit" class="btn blue" onclick="return CheckClick();"><i class="icon-ok"></i> 确定</button>

                                    <button type="button" class="btn" onclick="history.go(-1);">取消</button>

                                </div>

                            </form>

                            <!-- END FORM-->

                        </div>

                    </div>

                </div>

            </div>

        </div>

        <!-- END SAMPLE FORM PORTLET-->

    </div>

</div>
<script type="text/javascript">
    function CheckClick() {
        if (document.getElementById("Org_UsageType_ID").value == "") {
            alert("请选择类型！");
            return false;
        }
        if (document.getElementById("Name").value == "") {
            alert("请输入名称！");
            return false;
        }
        return true;
    }
</script>

