@model LinqModel.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPageManage.cshtml";
}




<div class="row-fluid">

    <div class="span12">

        <!-- BEGIN SAMPLE FORM PORTLET-->

        <div class="portlet box grey tabbable">

            <div class="portlet-title">

                <div class="caption">

                    <i class="icon-reorder"></i>

                    <span class="hidden-480">增加权限类别</span>

                </div>

            </div>

            <div class="portlet-body form">

                <div class="tabbable portlet-tabs">

                    <ul class="nav nav-tabs">

                        <li class="active"><a href="#portlet_tab1" data-toggle="tab">权限类别</a></li>

                    </ul>

                    <div class="tab-content">

                        <div class="tab-pane active" id="portlet_tab1">

                            <!-- BEGIN FORM-->
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <form action="#" class="form-horizontal">


                                    @Html.ValidationSummary(true)
                                    <div class="control-group">

                                        @Html.LabelFor(model => model.CategoryName, "权限类别名称：", htmlAttributes: new { @class = "control-label col-md-2" })


                                        <div class="controls">


                                            @Html.EditorFor(model => model.CategoryName)
                                            @Html.ValidationMessageFor(model => model.CategoryName)


                                            <span class="warning">*</span>

                                        </div>

                                    </div>



                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="保存" onclick="return CheckClick();"  class="btn btn-default" />
                                        </div>
                                    </div>


                                </form>
                            }
                            <!-- END FORM-->

                        </div>

                    </div>

                </div>

            </div>

        </div>

        <!-- END SAMPLE FORM PORTLET-->

    </div>

</div>



<div>
    @Html.ActionLink("返回权限类别列表", "Index")
   
</div>
<script type="text/javascript">
    function CheckClick() {
        if (document.getElementById("CategoryName").value == "") {
            alert("请输入名称！");
            return false;
        }

        return true;
    }
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}