    @{
        if (ViewBag.prodID != null)
        {
            @Html.Action("Head", new { prodID = ViewBag.prodID, usageID = ViewBag.usageID, ewm = ViewBag.ewm })
        }
        else
        {
            @Html.Action("Head", new { prodID = 0, usageID = 0 })
        }
    }
    
    @{
        if (ViewBag.ewmResult == "ERROR")
        {
            <div id="product-promotion" class="content-section fontbody">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <h1 class="section-title">您的二维码信息错误，无法追溯</h1>
                        </div> <!-- /.col-md-12 -->
                    </div>
                </div>
            </div>

        }
        else
        {
            @Html.Action("Product", new { prodID = ViewBag.prodID, usageID = ViewBag.usageID, ewm = ViewBag.ewm })

            if (ViewBag.usageID == 0)
            {
                @Html.Action("Flow", new { ewmNum = ViewBag.ewmNum, prodID = ViewBag.prodID })
            }
            //实时视频
            @Html.Action("Video", new { prodID = ViewBag.prodID })
            
                       

           @Html.Action("Contact", new { orgID = ViewBag.orgID, ewm = ViewBag.ewm, ewmNum = ViewBag.ewmNum, prodID = ViewBag.prodID })
            }
                        }

                        @Html.Action("Footer")
                        <script src="/Content/js/vendor/jquery-1.10.1.min.js"></script>
                        <script>window.jQuery || document.write('<script src="/Content/js/vendor/jquery-1.10.1.min.js"><\/script>')</script>
