
@{
    ViewBag.Title = "Video";
    Layout = null;
}

@if (ViewBag.VideoUrl != null)
{
    <div id="currentVideo" class="content-section">
        <div class="container">
            <div class="row">
                <div class=" text-center">
                    <h1 class="section-title">实时视频</h1>
                </div>
            </div>
            <div style="text-align:center;">
                @*width="560" height="480"*@
                <video style="border:1px solid black;background-color:black; width:80%;" preload="auto" controls="controls" src="@ViewBag.VideoUrl">
                    如果您的浏览器不支持此视频，请
                    <a href="@ViewBag.VideoUrl">点击此处</a> 进行下载
                </video>
            </div>
        </div>
    </div>
}
